rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
             request.auth.token.email == 'danyley2000@gmail.com';
    }

    // Products collection - read for all, write for admins only
    match /products/{productId} {
      allow read: if true;  // Anyone can read products
      allow write: if isAdmin();  // Only admins can create/update/delete
    }

    // Categories collection
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Badges collection
    match /badges/{badgeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Offers collection
    match /offers/{offerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users collection - users can read/write their own data
    match /users/{userId} {
      // TEMPORARY: Allow all authenticated users to read all users (for debugging)
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow write: if isAdmin();  // Admins can write all users

      // Subcollection: purchasedProducts
      match /purchasedProducts/{productId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
        allow read, write: if isAdmin();
      }

      // Legacy subcollection: products (kept for backwards compatibility)
      match /products/{productId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
        allow read, write: if isAdmin();
      }
    }

    // ============================================
    // REGLAS PARA SESIONES DE ENTRENAMIENTO
    // ============================================
    match /sessions/{sessionId} {
      // Permitir a usuarios autenticados crear sesiones
      allow create: if request.auth != null;

      // Los usuarios pueden leer/actualizar/eliminar sus propias sesiones
      allow read, update, delete: if request.auth != null
        && resource.data.userId == request.auth.uid;

      // Admins tienen acceso completo
      allow read, write: if isAdmin();
    }

    // ============================================
    // REGLAS PARA ESTADÍSTICAS DE USUARIO
    // ============================================
    match /user_statistics/{userId} {
      // Los usuarios pueden leer sus propias estadísticas
      allow read: if request.auth != null && request.auth.uid == userId;

      // Los usuarios pueden crear/actualizar sus propias estadísticas
      allow create, update: if request.auth != null && request.auth.uid == userId;

      // Solo admins pueden eliminar estadísticas
      allow delete: if isAdmin();

      // Admins tienen acceso completo
      allow read, write: if isAdmin();
    }

    // ============================================
    // REGLAS PARA BASES DE DATOS DE PREGUNTAS
    // ============================================
    // IMPORTANTE: Esta regla es amplia y permite acceso a cualquier colección
    // de nivel superior que no esté explícitamente definida arriba.
    // Las bases de datos de preguntas tienen IDs dinámicos (ej: nat-ops-questions)
    //
    // SEGURIDAD: Usuarios autenticados pueden LEER cualquier colección no definida
    // Solo admins pueden ESCRIBIR en estas colecciones
    //
    // RECOMENDACIÓN: Para mejor seguridad, considera mover las preguntas a
    // products/{productId}/questions/{questionId} en el futuro
    match /{questionDB}/{questionId} {
      // Permitir lectura a usuarios autenticados
      allow read: if request.auth != null;

      // Solo admins pueden escribir/modificar
      allow write: if isAdmin();
    }
  }
}