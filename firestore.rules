rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
             (request.auth.token.email == 'demo@frostware.com' ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // Products collection - read for all, write for admins only
    match /products/{productId} {
      allow read: if true;  // Anyone can read products
      allow write: if isAdmin();  // Only admins can create/update/delete
    }

    // Categories collection
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Badges collection
    match /badges/{badgeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Offers collection
    match /offers/{offerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read, write: if isAdmin();  // Admins can read/write all users
    }

    // User products (purchases)
    match /users/{userId}/products/{productId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read, write: if isAdmin();
    }

    // Block everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}